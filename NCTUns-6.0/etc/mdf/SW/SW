			ActiveOn	MODE_EDIT
			Enabled		FALSE
		End

		Begin LABEL		note_2
			Caption		"  addresses are not included. Their"
			Scale		40 260 200 30
			ActiveOn	MODE_EDIT
			Enabled		FALSE
		End

		Begin LABEL		note_3
			Caption		"  packets will not be forwarded by"
			Scale		40 280 200 30
			ActiveOn	MODE_EDIT
			Enabled		FALSE
		End

		Begin LABEL		note_4
			Caption		"  this switch. )"
			Scale		40 300 200 30
			ActiveOn	MODE_EDIT
			Enabled		FALSE
		End

		Begin INTERACTIONVIEW	iv_show
			Caption		"Show Switch Table"
			Scale		40 330 195 30
			ActiveOn	MODE_EDIT
			Enabled		FALSE

			Action		FUNC
			ActionFunc	"sw"

